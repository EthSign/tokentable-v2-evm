{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["./hardhat.config.ts"],
  "include": [
    "./config",
    "./scripts",
    "./test",
    "./typechain-types",
    "./deploy"
  ],
  "exclude": ["node_modules"]
}
